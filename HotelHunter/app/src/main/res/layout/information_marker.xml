<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content">
   <TextView
       android:textColor="#000"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:text="ABCDE"
       android:id="@+id/tv_price"/>
    <RatingBar
        android:theme="@style/RatingBar"
        android:layout_below="@id/tv_price"
        style = "?android:attr/ratingBarStyleSmall"
        android:id="@+id/rb_rating"
        android:numStars="5"
        android:rating="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_wifi"
        android:layout_below="@id/rb_rating"
        android:src="@drawable/wifi"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_air_condition"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_wifi"
        android:layout_below="@id/rb_rating"
        android:src="@drawable/air_conditioner"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/heater"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_air_condition"
        android:id="@+id/iv_heater"
        android:layout_below="@id/rb_rating"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/elevator"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_heater"
        android:id="@+id/iv_elevator"
        android:layout_below="@id/rb_rating"
        android:layout_width="25dp"
        android:layout_height="25dp" />
</RelativeLayout>