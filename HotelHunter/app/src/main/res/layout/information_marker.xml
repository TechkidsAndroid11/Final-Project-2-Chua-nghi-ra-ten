<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content">
    <TextView
        android:textStyle="bold"
        android:text="100000đ-250000đ"
        android:id="@+id/tv_price_hotel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <RatingBar
        android:theme="@style/RatingBar"
        android:layout_below="@id/tv_price_hotel"
        style = "?android:attr/ratingBarStyleSmall"
        android:id="@+id/rb_rating"
        android:numStars="5"
        android:rating="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_wifi"
        android:layout_below="@id/rb_rating"
        android:src="@drawable/ic_wifi_black_24dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_air_condition"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_wifi"
        android:layout_below="@id/rb_rating"
        android:src="@drawable/air_conditioner"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/nong_lanh"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_air_condition"
        android:id="@+id/iv_heater"
        android:layout_below="@id/rb_rating"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/elevator"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv_heater"
        android:id="@+id/iv_elevator"
        android:layout_below="@id/rb_rating"
        android:layout_width="25dp"
        android:layout_height="25dp" />
</RelativeLayout>