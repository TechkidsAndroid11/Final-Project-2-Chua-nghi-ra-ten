    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_1">



        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="wifi" />

            <CheckBox
                android:id="@+id/cb_dieu_hoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Điều hòa" />

            <CheckBox
                android:id="@+id/cb_nong_lanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Nóng lạnh" />

            <CheckBox
                android:id="@+id/cb_thang_may"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/cb_nong_lanh"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Thang máy" />

            <TextView
                android:id="@+id/tv_dien_thoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_dieu_hoa"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="50dp"
                android:text="Điện thoại: " />

            <TextView
                android:id="@+id/tv_so_dien_thoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_dieu_hoa"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50sp" />

            <TextView
                android:id="@+id/tv_dia_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_dieu_hoa"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="100dp"
                android:text="Địa chỉ: " />

            <TextView
                android:id="@+id/tv_dia_chi_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_dieu_hoa"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@id/tv_dia_chi" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_feedback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/tv_dia_chi"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_feedback11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_feedback"
                android:layout_marginTop="8dp"
                android:text="Đánh giá của bạn"
                android:layout_marginEnd="16dp"/>

        </RelativeLayout>



    </ScrollView>

</RelativeLayout>
