<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Giá:"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/gr_pen_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100k" />

        <RadioButton
            android:id="@+id/rb_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200k" />

        <RadioButton
            android:id="@+id/rb_strong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300k" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gr_pen_size"
        android:layout_marginLeft="8dp"
        android:text="Khoảng cách:"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/gr_pen_size1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_distance"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#60; 5km" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5km" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#62; 5km" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gr_pen_size1"
        android:layout_marginLeft="8dp"
        android:text="Tiện ích:"
        android:textSize="24dp"
        android:textStyle="bold" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_wifi"
        android:layout_below="@+id/tv_service"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_BCS"
        android:layout_below="@+id/cb_thangMay"
        android:layout_toRightOf="@+id/cb_maylanh"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_maylanh"
        android:layout_below="@+id/cb_wifi"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_thangMay"
        android:layout_below="@+id/tv_service"
        android:layout_toRightOf="@+id/cb_wifi"/>

</RelativeLayout>